    <% @stock.options.all.each do |option| %>
    <tr>
        <td>
            <%= "#{option.option_type}" %>
        </td>
        <td>
            <%= "#{option.strike_price}" %>
        </td>
        <td>
            <%= "#{option.contract_name}" %>
        </td>
        <td>
            <%= "#{option.last}" %>
        </td>
        <td>
            <%= "#{option.bid}" %>
        </td>
        <td>
            <%= "#{option.ask}" %>
        </td>
        <td>
            <%= "#{option.change}" %>
        </td>
        <td>
            <%= "#{option.percent_change}" %>
        </td>
        <td>
            <%= "#{option.volume}" %>
        </td>
        <td>
            <%= "#{option.open_interest}" %>
        </td>
        <td>
            <%= "#{option.implied_volatility}" %>
        </td>
        <td>
            <%= "#{Time.at(option.expiration_time_seconds).gmtime.strftime("%Y-%b-%-d")}" %>
